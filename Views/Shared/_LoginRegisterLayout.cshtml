@*
    Shared layout for Login and Register pages
*@

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Trinity College Student Portal</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <style>
        body, html {
            height: 100%;
            margin: 0;
            padding: 0;
            background: url('/images/trinity-banner.jpg') no-repeat center center fixed;
            background-size: cover;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .overlay {
            background-color: rgba(0, 0, 50, 0.7);
            position: absolute;
            top: 0;
            left: 0;
            height: 100%;
            width: 100%;
            z-index: 1;
        }

        .auth-container {
            position: relative;
            z-index: 2;
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
        }

        .auth-card {
            background-color: #ffffff;
            color: #333;
            border-radius: 16px;
            padding: 3rem 2.5rem;
            box-shadow: 0 10px 25px rgba(0,0,0,0.3);
            max-width: 400px;
            width: 100%;
        }

        .auth-header {
            text-align: center;
            margin-bottom: 1.5rem;
        }

            .auth-header h2 {
                font-weight: bold;
                margin-bottom: 0.25rem;
            }

            .auth-header small {
                color: #666;
            }

        .btn-primary {
            background-color: #0056b3;
            border: none;
        }

            .btn-primary:hover {
                background-color: #003d80;
            }

        .
        
        -control {
            border-radius: 8px;
        }

        .logo-img {
            width: 70px;
            margin-bottom: 0.75rem;
        }
    </style>
</head>
<body>
    <div class="overlay"></div>
    <div class="auth-container">
        <div class="auth-card">
            <div class="auth-header">
                <img src="/images/trinity-logo.png" alt="Trinity College Logo" class="logo-img" />
                <h2>@ViewData["Title"]</h2>
                <small>Trinity College Student Portal</small>
            </div>
            @RenderBody()
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>

