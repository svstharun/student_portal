@{
    ViewData["Title"] = "Access Denied";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0"><i class="fas fa-exclamation-triangle"></i> Access Denied</h4>
                </div>
                <div class="card-body">
                    <div class="text-center mb-4">
                        <i class="fas fa-lock fa-5x text-danger"></i>
                    </div>
                    <p class="text-center">
                        You do not have permission to access this resource.
                    </p>
                    <hr />
                    <div class="text-center">
                        <a asp-controller="UsersMasters" asp-action="Login" class="btn btn-primary">Return to Login</a>
                        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Go to Home</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>